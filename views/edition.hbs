<div class="container">

    <form action="/jeu/{{id}}?_method=PUT" method="POST">
        <!--  dans action nous mettons l'url qui est dans le app.js methode post-->
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Nom du jeu</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Le nom du jeu"
                        name="nom" value="{{nom}}">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Cat√©gorie du jeu</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Le genre de jeu"
                        name="categorie" value="{{categorie}}">
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Plateforme du jeu</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1"
                        placeholder="Sur quelle console ce joue le jeu" name="plateforme" value="{{plateforme}}">
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Prix</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Entrer le prix"
                        name="prix" value="{{prix}}">
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Petite Description du jeu</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" name="description">{{description}}</textarea>
        </div>
        
        <div class="mb-3">
            <button type="submit" class="btn btn-success">Valider la modification</button>
            <button class="btn btn-link">Annuler</button>
        </div>
    </form>

</div>