<div class="container mt-2">

    <!-- Section ajout de jeu au catalogue -->

    <form action="/jeu/publication" method="POST" enctype="multipart/form-data">
        <!--  dans action nous mettons l'url qui est dans le app.js methode post-->
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Nom du jeu</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Le nom du jeu"
                        name="nom">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Catégorie du jeu</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Le genre de jeu"
                        name="categorie">
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Plateforme du jeu</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1"
                        placeholder="Sur quelle console ce joue le jeu" name="plateforme">
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Prix</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Entrer le prix"
                        name="prix">
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Petite Description du jeu</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" name="description"></textarea>
        </div>
        
        <div class="form-group">
            <input type="file" class="form-control-file mb-2" id="exampleFormControlFile1" name="image">
        </div>
        

        <div class="mb-3">
            <button class="btn btn-success">Valider son entrée en stock</button>
            <button class="btn btn-link">Annuler</button>
        </div>
    </form>


<!-- Section gestion des ventes de jeux -->

    <div class="modification">

        <div class="row">
            <div class="col-md-12">
                <h2 style="text-align:center">Les jeux publiés en stock</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <h3>Jeu</h3>
                            {{#each posts}}
                            <li class="list-group-item"><a href="{{id}}">{{nom}}</a></li>
                            <form action="/jeu/{{id}}?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger">Supprimer le jeu</button>
                            </form>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>