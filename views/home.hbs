<div class="container conteneur">
    <div class="row">
        <div class="col-md-12 mt-5 mb-2">

            <h1 class="titre-homepage">Les nouveautés</h1>

        </div>
    </div>
    <form action="/" method="POST" enctype="multipart/form-data">
        <div class="row">
            {{#each posts}}
            <!-- posts est la donnée qui est dans l'objet sur home page JS-->

            <div class="col-md-3">
                <div class="card mb-5">
                    <img src="{{image}}" class="card-img-top" alt="..." name="imagehome">
                    <div class="card-body">
                        <h4 name="nomhome">{{nom}}</h4>
                        <ul>
                            <li class="list-card" name="categoriehome">Jeux de type: {{categorie}}</li>
                            <li class="list-card" name="plateformehome">Pour {{plateforme}}</li>
                        </ul>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-link" data-bs-toggle="modal"
                            data-bs-target="#staticBackdrop">
                            En savoir plus
                        </button>

                        <!-- Modal -->


                        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                            tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog .modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="staticBackdropLabel">Configuration</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        {{description}}
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger"
                                            data-bs-dismiss="modal">Fermer</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <h5 name="prixhome">Prix de vente :{{prix}}€</h5>
                        <button type="submit" class="btn btn-primary">J'achète</button>
    </form>





</div>
</div>
</div>
{{/each}}
</div>
</div>