<div class="container">
    <div class="row">
        <div class="col-md-12 mt-5 mb-2">

            <h1 class="titre-homepage">Les nouveautés</h1>

        </div>
    </div>

    <div class="row">
        {{#each posts}} <!-- posts est la donnée qui est dans l'objet sur home page JS-->
        <div class="col-md-3">
            <div class="card mb-5">
                <img src="{{image}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h4>{{nom}}</h4>
                    <ul>
                        <li class="list-card">Jeux de type: {{categorie}}</li>
                        <li class="list-card">Pour {{plateforme}}</li>
                    </ul>
                    <p><a href="">En savoir plus</a></p>
                    <h5>Prix de vente :{{prix}}€</h5>
                    <button class="btn btn-primary">J'achète</button>
                    
                    
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>